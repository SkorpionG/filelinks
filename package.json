{
  "name": "filelinks",
  "version": "0.3.2",
  "description": "A lightweight CLI tool for declaring implicit links between files in a workspace, notifying when watched files change",
  "license": "MIT",
  "author": "SkorpionG",
  "homepage": "https://github.com/SkorpionG/filelinks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SkorpionG/filelinks.git"
  },
  "bugs": {
    "url": "https://github.com/SkorpionG/filelinks/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "filelinks": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:commands": "npm test -- tests/commands",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "check": "npm run typecheck && npm run format:check && npm run lint && npm run test",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run format:check && npm run test && npm run build",
    "test:local": "npm run build && node ./dist/cli.js"
  },
  "keywords": [
    "cli",
    "file-watcher",
    "git",
    "file",
    "files",
    "links",
    "workflow",
    "development-tools"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/glob": "9.0.0",
    "@types/inquirer": "9.0.9",
    "@types/jest": "30.0.0",
    "@types/node": "25.0.3",
    "eslint": "9.39.2",
    "jest": "30.2.0",
    "prettier": "3.7.4",
    "ts-jest": "29.4.6",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0"
  },
  "dependencies": {
    "chalk": "5.6.2",
    "commander": "14.0.2",
    "glob": "13.0.0",
    "inquirer": "13.1.0",
    "simple-git": "3.30.0"
  }
}
